<div id="registration" class="main_div">
    <p>
        <label for="login">Login: </label>
        <label>
            <input id="login" type="text" name="login" placeholder="Login" required onkeyup="checkLogin(this.value)">
        </label>
    </p>

    <p>
        <label for="password">Password: </label>
        <input id="password" type="password" name="password" placeholder="Password" onkeyup="checkPassword(this.value)">
    </p>

    <p>
        <label for="password">Repeat password: </label>
        <input id="repeat" type="password" name="repeat" placeholder="Password" class="showPassword" onkeyup="checkRepeat(this.value)">
    </p>

    <div id="serving">
        <p id="errorInput"></p>
        <p id="error"></p>
    </div>

    <div>
        <button id="submit_regist">Регистрация</button>
    </div>

    <div>
        <a href="http://localhost:5000/auth/login" style="color: black"> Вы уже зарегистрированы?</a>
    </div>
</div>

<script src="/js/registration.js"></script>