<div class="addinfo__form">
    <h1>Введи свои данные пожалуйста)</h1>

    <label for="Name">Имя:
        <input id="name" type="text" name="name" placeholder="Name" required onkeyup="checkName(this.value)">
        <p id="errorInputName"></p>
    </label><br/><br/>

    <label for="Surname"> Фамилия:
        <input id="surname" type="text" name="surname" placeholder="Surname" required onkeyup="checkSurname(this.value)">
        <p id="errorInputSurname"></p>
    </label><br/><br/>

    <label for="Middle_name"> Отчество:
        <input id="middle_name" type="text" name="middle_name" placeholder="Middle_name" required onkeyup="checkMiddle_name(this.value)">
        <p id="errorInputMiddle_name"></p>
    </label><br/><br/>

    <label for="Birthday"> День рождения:
        <input id="birthday" type="date" name="birthday" placeholder="Birthday" required onkeyup="checkBirthday(this.value)">
        <p id="errorInputBirthday"></p>
    </label><br/><br/>

    <label for="Address"> Адрес:
        <input id="address" type="text" name="address" placeholder="Address" required>
        <p id="errorInputAddress"></p>
    </label><br/><br/>

    <label for="Mail"> Электронная почта:
        <input id="mail" type="text" name="mail" placeholder="Mail" required onkeyup="checkEmail(this.value)">
        <p id="errorInputMail"></p>
    </label><br/><br/>

    <label for="Phonenumber"> Номер телефона:
        <input id="phonenumber" type="text" name="phonenumber" placeholder="Phone number" required onkeyup="checkPhone(this.value)">
        <p id="errorInputPhone"></p>
    </label><br/><br/>

    <div id="serving">
        <p id="error"></p>
    </div>

    <div>
<!--        <input id="add_info_submit" class="add_info_submit" type="submit" name="offer"  value="Add">-->
        <button id="submit_addinfo">Сохранить</button>
    </div>
</div>
<script src="/js/useraddinfo.js"></script>
